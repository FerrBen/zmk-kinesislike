#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan_composite;
        zmk,matrix_transform = &default_transform;
        zmk,split = &split;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <16>;
        rows = <7>;
// Only physical keys are listed, in physical left-to-right order.
// No &none padding needed in the keymap.
//
// Row 0: 7L + 5way + 7R = 15       Row 3: 6L + 5way + 6R = 13
// Row 1: 7L + 5way + 7R = 15       Row 4: 4L + 5way + 4R = 9
// Row 2: 7L + 5way + 7R = 15       Row 5: 5L + 5R        = 10
// Row 6: 1 EC11 push               Total: 63 bindings per layer
//
// Left:  36 keys + 5 five-way = 41
// Right: 36 keys + 1 EC11 push = 37
// Grand total: 63 physical positions (+ EC11 rotation via sensor)

        map = <
// Row 0: L(c0-c6) 5way R(c8-c14) = 15
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6)   RC(0,7)   RC(0,8) RC(0,9) RC(0,10) RC(0,11) RC(0,12) RC(0,13) RC(0,14)
// Row 1: L(c0-c6) 5way R(c8-c14) = 15
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6)   RC(1,7)   RC(1,8) RC(1,9) RC(1,10) RC(1,11) RC(1,12) RC(1,13) RC(1,14)
// Row 2: L(c0-c6) 5way R(c8-c14) = 15
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6)   RC(2,7)   RC(2,8) RC(2,9) RC(2,10) RC(2,11) RC(2,12) RC(2,13) RC(2,14)
// Row 3: L(c0-c5) 5way R(c9-c14) = 13
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)   RC(3,7)   RC(3,9) RC(3,10) RC(3,11) RC(3,12) RC(3,13) RC(3,14)
// Row 4: L(c1-c4) 5way R(c14,c10,c11,c12) = 9  [physical order]
RC(4,1) RC(4,2) RC(4,3) RC(4,4)   RC(4,7)   RC(4,14) RC(4,10) RC(4,11) RC(4,12)
// Row 5: L(c2,c4,c5,c6,c3) R(c12,c10,c9,c8,c11) = 10  [physical order]
RC(5,2) RC(5,4) RC(5,5) RC(5,6) RC(5,3)   RC(5,12) RC(5,10) RC(5,9) RC(5,8) RC(5,11)
// Row 6: EC11 push button = 1
RC(6,15)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";

        diode-direction = "col2row";
        row-gpios
            = <&pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 19 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 18 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 16 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };

    // Composite kscan: matrix keys + EC11 push button (added per-side in overlays)
    kscan_composite: kscan_composite {
        compatible = "zmk,kscan-composite";
        rows = <7>;
        columns = <16>;

        matrix {
            kscan = <&kscan0>;
        };

        // EC11 push button child is added in dactyl_right.overlay
    };

    right_encoder: encoder_right {
        compatible = "alps,ec11";
        a-gpios = <&pro_micro 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&pro_micro 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <80>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&right_encoder>;
        triggers-per-rotation = <20>;
    };

    split: split {
        compatible = "zmk,split-peripheral-left";
        status = "disabled";
    };
};
